{
  "name": "charmverse-utilities",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/charmverse-utilities/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputFile}"],
      "options": {
        "main": "packages/charmverse-utilities/src/index.ts",
        "tsConfig": "packages/charmverse-utilities/tsconfig.lib.json",
        "outputPath": "dist/charmverse-utilities",
        "rootDir": "packages/charmverse-utilities/src",
        "clean": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/charmverse-utilities/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/charmverse-utilities/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
