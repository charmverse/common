{
  "name": "@charmverse/core",
  "version": "1.0.0",
  "description": "",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/shared": {
      "import": "./dist/shared.js",
      "require": "./dist/shared.js",
      "types": "./dist/shared.d.ts"
    },
    "./dist/prisma": {
      "import": "./dist/prisma.js",
      "require": "./dist/prisma.js",
      "types": "./dist/prisma.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=\"--max_old_space_size=4096 --experimental-vm-modules=true\"  dotenv -e .env.test.local -- npx jest --config='./jest.config.ts' --maxWorkers=2 --watch --verbose",
    "test:ci": "NODE_OPTIONS=\"--max_old_space_size=4096 --experimental-vm-modules=true\"  dotenv -e .env.test.local -- npx jest --config='./jest.config.ts' --maxWorkers=2",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build": "npm run prisma:generate && tsc --module esnext --outDir dist/esm",
    "postinstall": "npm run build",
    "prepare": "husky install",
    "prisma:generate": "npx prisma generate --schema=./src/prisma/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --schema=./src/prisma/schema.prisma --force",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/prisma/schema.prisma",
    "prisma:deploy": "npx prisma migrate deploy --schema=./src/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charmverse/core.git"
  },
  "keywords": [
    "charmverse"
  ],
  "author": "",
  "bugs": {
    "url": "https://github.com/charmverse/core/issues"
  },
  "homepage": "https://github.com/charmverse/core#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint src/ --fix"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prisma": "^4.12.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@types/lodash": "^4.14.192",
    "@types/luxon": "^3.3.0",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/uuid": "^9.0.1",
    "bufferutil": "^4.0.7",
    "dotenv": "^16.0.3",
    "ethers": "^6.2.3",
    "lodash": "^4.17.21",
    "loglevel": "^1.8.1",
    "luxon": "^3.3.0",
    "nanoid": "^4.0.2",
    "nanoid-dictionary": "^4.3.0",
    "utf-8-validate": "^5.0.10",
    "uuid": "^9.0.0"
  }
}
