{
  "name": "@charmverse/core",
  "version": "1.0.0",
  "description": "",
  "type": "commonjs",
  "types": "./dist/cjs/index.d.ts",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./dist/shared": {
      "import": "./dist/esm/shared.js",
      "require": "./dist/cjs/shared.js"
    },
    "./dist/prisma": {
      "import": "./dist/esm/prisma.js",
      "require": "./dist/cjs/prisma.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS=\"--max_old_space_size=4096 --experimental-vm-modules=true\"  dotenv -e .env.test.local -- npx jest --config='./jest.config.ts' --maxWorkers=2 --watch --verbose",
    "test:ci": "NODE_OPTIONS=\"--max_old_space_size=4096 --experimental-vm-modules=true\"  dotenv -e .env.test.local -- npx jest --config='./jest.config.ts' --maxWorkers=2",
    "build": "tsc",
    "build:esm": "tsc --project tsconfig.esm.json && tsx createpackagejson.ts",
    "build:watch:esm": "tsx createpackagejson.ts && tsc --project tsconfig.esm.json --watch",
    "build:watch": "tsc --watch",
    "build:all": "rm -rf ./dist && npm run build:esm && npm run build",
    "postinstall": "npm run prisma:generate && npm run build:all",
    "prepare": "husky install",
    "prisma:studio": "npx prisma studio --schema=./src/prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema=./src/prisma/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --schema=./src/prisma/schema.prisma --force",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/prisma/schema.prisma",
    "prisma:migrate:local": "npx dotenv -e .env.local -- npx prisma migrate dev --schema=./src/prisma/schema.prisma",
    "prisma:deploy": "npx prisma migrate deploy --schema=./src/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charmverse/core.git"
  },
  "keywords": [
    "charmverse"
  ],
  "author": "",
  "bugs": {
    "url": "https://github.com/charmverse/core/issues"
  },
  "homepage": "https://github.com/charmverse/core#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint src/ --fix"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prisma": "^4.12.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@types/lodash": "^4.14.192",
    "@types/luxon": "^3.3.0",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/uuid": "^9.0.1",
    "bufferutil": "^4.0.7",
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.17.18",
    "esbuild-node-externals": "^1.7.0",
    "ethers": "^6.2.3",
    "lodash": "^4.17.21",
    "loglevel": "^1.8.1",
    "luxon": "^3.3.0",
    "nanoid": "^3.3.6",
    "nanoid-dictionary": "^3.0.0",
    "tsx": "^3.12.6",
    "utf-8-validate": "^5.0.10",
    "uuid": "^9.0.0"
  }
}
